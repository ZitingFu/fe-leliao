/* page/pages/publish/publish.wxss */

.from-list {
  /* background-color: #FC9D99; */
  background-image: linear-gradient(90deg, #00c0ff 0%, #ffcf00 49%, #fc4f4f 100%);
}
.p-button {
  width: 80%;
  position: absolute;
  bottom: 60px;
  margin-left: 10%;
  background-image: linear-gradient(90deg, #00c0ff 0%, #ffcf00 49%, #fc4f4f 100%);
  padding: 3px;
  display: inline-block;
  border-radius: 7px;
}

/**内容输入框样式*/

.f {
  display: flex;
}

.f-end {
  justify-content: flex-end;
}

.text-count-display {
  padding: 2%;
}

.textarea-count {
  border: 1px solid #ddd;
  border-radius: 5px;
}

.textarea-count textarea {
  width: 100%;
}

/* 图片题 */

.images_st {
  margin-right: 6%;
  border: 1px solid #eee;
}

.images {
  margin-top: 30rpx;
  display: inline-block;
  width: 100%;
  margin-bottom: 140px;
}

.images .item {
  flex: 1;
  margin-left: 1.9%;
  width: 120rpx;
  height: 120rpx;
}

.images .item:last-child {
  margin-right: 3.6%;
}

.images .view-item {
  position: relative;
  float: left;
}

.images .view-item .del {
  width: 33rpx;
  height: 33rpx;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 999;
}

.images view {
  display: flex;
  justify-content: center;
  flex-direction: column;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
  float: left;
}
