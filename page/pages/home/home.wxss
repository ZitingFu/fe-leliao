/* page/pages/home/home.wxss */

.swiper {
  height: 400rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.v-list-view {
  width: 100%;
  display: flex;
  justify-content: space-around;
  /* background-color: rgb(219,236,194); */
}

.v-item {
  margin: 10rpx 10rpx auto 10rpx;
  text-align: center;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
}

.item-text {
  font: Arial, Tahoma, Verdana;
  color: rgb(56, 52, 52);
  letter-spacing: 3px;
  font-weight: bold;
  padding-bottom: 8rpx;
}
.item-publish {
  font: Arial, Tahoma, Verdana;
  color: rgb(56, 52, 52);
  letter-spacing: 3px;
  font-weight: bold;
  background-color: #FC9D99;
  padding-bottom: 6rpx;
} 
.top-image {
  background-image: url("https://yiqilai-image.oss-cn-beijing.aliyuncs.com/leliao/images/%E9%BB%98%E8%AE%A4%E6%A0%87%E9%A2%98_%E8%87%AA%E5%AE%9A%E4%B9%89px_2018.09.28.png");
  background-repeat: no-repeat;
}

.top-image {
  background-image: url("https://yiqilai-image.oss-cn-beijing.aliyuncs.com/leliao/images/%E9%BB%98%E8%AE%A4%E6%A0%87%E9%A2%98_%E8%87%AA%E5%AE%9A%E4%B9%89px_2018.09.28.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  height: 200rpx;
}

.image-cen {
  background-image: url("https://yiqilai-image.oss-cn-beijing.aliyuncs.com/leliao/images/%E9%BB%98%E8%AE%A4%E6%A0%87%E9%A2%98_%E8%87%AA%E5%AE%9A%E4%B9%89px_2018.09.25.jpg");
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  height: 180rpx;
}

.show-iconImage {
  margin-right: 20%;
  width: 50px;
  height: 50px;
  display: inline-block;
  vertical-align: middle;
  position: absolute;
  animation: a 1s steps(12) infinite;
}
.topic{
   /* background-color: rgb(225, 238, 195) */
}
.topic-item {
  display: flex;
  margin: auto auto 5rpx auto;
  border: 2rpx inset rgb(94, 172, 255);
  border-radius: 11px;
  background-image: linear-gradient(90deg, #00C0FF 0%, #FFCF00 49%, #FC4F4F 100%);
}
.hover{
  background-image: linear-gradient(90deg, rgba(0, 255, 213, 0.678) 0%, rgba(81, 255, 0, 0.979) 49%, rgb(252, 79, 174) 100%);
}
.topic-item image {
  margin-left: 4rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 100rpx;
}

.topic-name-co {
  margin-left: 8rpx;
  color: #777;
  font: 30rpx Arial, Tahoma, Verdana;
  width: 80%;
}

.adds {
  color: #777;
  font: 30rpx Arial, Tahoma, Verdana;
  display: -webkit-box;
  font-size: 30rpx;
  line-height: 40rpx;
  height: 80rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10rpx;
  letter-spacing: 4rpx;
}
.item-type .item-type-uname{
  float: left;
  /* margin: auto 3rpx 0px auto; */
  letter-spacing: 2rpx;
  font-size: 30rpx;
}
.item-type .item-type-time{
  float: right;
  margin: auto 3rpx 0px auto;
  letter-spacing: 2rpx;
  font-size: 30rpx;
}
.item-type image{
  height: 30rpx;
  width: 35rpx;
}
.item-type-image,.item-type-uname,.item-type-time{
  vertical-align:middle;
}


